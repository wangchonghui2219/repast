<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="10dp"
    tools:context="com.dlwx.repast.view.activity.RegisterActivity">
    <include
        layout="@layout/tool_bar"
        />
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="300px" />

    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="10dp">

        <ImageView
            style="@style/Item_pic_size"
            android:layout_gravity="center_vertical"
            android:src="@mipmap/icon_xiugaibangding" />

        <EditText
            android:id="@+id/et_phone"
            style="@style/text_style_13"
            android:layout_width="0dp"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="@dimen/spacebetween"
            android:layout_weight="1"
            android:background="@null"
            android:hint="请输入手机号"
            />
    </LinearLayout>

    <View
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        style="@style/halvingline"
        />
    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:orientation="horizontal"
        >
        <ImageView
            style="@style/Item_pic_size"
            android:layout_gravity="center_vertical"
            android:src="@mipmap/icon_xiugaiyanzheng"
            />
        <EditText
            android:id="@+id/et_auth"
            style="@style/text_style_13"
            android:layout_marginLeft="@dimen/spacebetween"
            android:hint="请输入手机号验证码"
            android:background="@null"
            android:layout_gravity="center_vertical"
            android:layout_width="0dp"
            android:layout_weight="1"
            />
        <Button
            android:id="@+id/btn_auth"
            style="@style/Auth_code"
            android:text="验证码"

            />
    </LinearLayout>
    <View
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        style="@style/halvingline"
        />
    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:orientation="horizontal"
        >
        <ImageView
            style="@style/Item_pic_size"
            android:layout_gravity="center_vertical"
            android:src="@mipmap/icon_xiugaimima"
            />
        <EditText
            android:id="@+id/et_pwd"
            style="@style/text_style_13"
            android:inputType="textPassword"
            android:layout_marginLeft="@dimen/spacebetween"
            android:hint="请输入密码"
            android:background="@null"
            android:layout_gravity="center_vertical"
            android:layout_width="0dp"
            android:layout_weight="1"

            />
    </LinearLayout>
    <View
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        style="@style/halvingline"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:orientation="horizontal"
        >
        <ImageView
            style="@style/Item_pic_size"
            android:layout_gravity="center_vertical"
            android:src="@mipmap/icon_xiugaimima"
         />
        <EditText
            android:id="@+id/et_affpwd"
            style="@style/text_style_13"
            android:layout_width="0dp"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="@dimen/spacebetween"
            android:layout_weight="1"
            android:background="@null"
            android:hint="请再次输入密码"
            android:inputType="textPassword"

            />


    </LinearLayout>
    <View
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        style="@style/halvingline"
        />

        <Button
            android:id="@+id/btn_submit"
            style="@style/Buton_style"
            android:text="注册"
            android:layout_marginTop="20dp"
             />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:orientation="horizontal"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="10dp"
                >


                <CheckBox
                    android:id="@+id/checkBox"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:background="@drawable/selete_check"
                    android:button="@null"
                    android:checked="true" />

                <TextView
                   style="@style/text_style_13"
                    android:text="我已看过并同意"
                    />
                    <TextView
                        android:id="@+id/tv_protocol"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/orange"
                        android:text="《合之齐商家版用户协议》"
                        />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="20dp"
                android:layout_gravity="center_horizontal"
                >
                <TextView
                   style="@style/text_style_13"
                    android:text="已有账号，"
                    />
                <TextView
                    android:id="@+id/tv_gologin"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="立即登录"
                    android:textColor="@color/orange"
                    android:textSize="13sp"
                    />
            </LinearLayout>
</LinearLayout>
