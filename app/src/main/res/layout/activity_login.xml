<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.dlwx.repast.view.activity.LoginActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@mipmap/icon_register"
        android:orientation="vertical"
        >
    <View
        android:layout_width="match_parent"
        android:layout_height="50px"
        />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
            app:popupTheme="@style/ThemeOverlay.AppCompat.Light"></android.support.v7.widget.Toolbar>

        <TextView
            android:id="@+id/title_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:ellipsize="end"
            android:maxEms="7"
            android:singleLine="true"
            android:textColor="@color/black_color"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/tv_right"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="15dp"
            android:textColor="@color/black_color"
            android:textSize="13sp" />
    </RelativeLayout>

    <ImageView
            android:layout_width="match_parent"
            android:layout_height="300px"
            />
    </LinearLayout>
    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="15dp"
        android:layout_marginTop="20dp"
        android:orientation="horizontal"
        >
        <ImageView
            style="@style/Item_pic_size2"
            android:layout_gravity="center_vertical"
            android:src="@mipmap/icon_xiugaibangding"
                />
        <EditText
            android:id="@+id/et_phone"
            style="@style/text_style_13"
            android:layout_marginLeft="@dimen/spacebetween"
            android:hint="请输入手机号"
            android:background="@null"
            android:inputType="phone"
            android:layout_gravity="center_vertical"
            android:layout_width="0dp"
            android:layout_weight="1"

            />
    </LinearLayout>
    <View
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        style="@style/halvingline"
        />
    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="15dp"
        android:orientation="horizontal"
        >
        <ImageView
            style="@style/Item_pic_size2"
            android:layout_gravity="center_vertical"
           android:src="@mipmap/icon_xiugaimima"
            />
        <EditText
            android:id="@+id/et_pwd"
            style="@style/text_style_13"
            android:inputType="textPassword"
            android:layout_marginLeft="@dimen/spacebetween"
            android:hint="请输入密码"
            android:background="@null"
            android:layout_gravity="center_vertical"
            android:layout_width="0dp"
            android:layout_weight="1"

            />
    </LinearLayout>
    <View
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        style="@style/halvingline"
        />
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_alignParentTop="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="20dp"
            android:layout_marginRight="20dp"
            >

            <TextView
                android:id="@+id/tv_regis"
                style="@style/text_style_13"
                android:visibility="gone"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="15dp"
                android:text="注册"
                />
                <View
                    android:visibility="gone"
                    android:layout_marginLeft="5dp"
                    android:layout_width="1dp"
                    android:layout_marginTop="10dp"
                    android:layout_height="15dp"
                    android:layout_marginRight="5dp"
                    android:background="@color/gary_line"
                    />
        <TextView
            android:id="@+id/tv_findpwd"
            style="@style/text_style_13"

            android:text="忘记密码？"

            />



        </LinearLayout>
    </RelativeLayout>
    <Button
        style="@style/Buton_style"
        android:text="登录"
        android:id="@+id/btn_submit"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="40dp"

        />
        <View
            android:layout_width="match_parent"
            android:layout_height="40dp"
            />
</LinearLayout>
