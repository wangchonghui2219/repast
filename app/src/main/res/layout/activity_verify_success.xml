<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.dlwx.repast.view.activity.VerifySuccessActivity">
        <include
            layout="@layout/tool_bar"
            />
        <TextView
            android:id="@+id/tv_pickname"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="自领"
            android:gravity="center_horizontal"
            android:padding="10dp"
            android:textColor="@color/black_color"
            android:textSize="13sp"
            android:background="#FEF9F6"
            />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="8dp"
        android:orientation="horizontal"
        >
        <TextView
            style="@style/text_style_13"
            android:text="订单号:"
            />
        <TextView
            style="@style/text_style_13"
            android:layout_marginLeft="3dp"
            android:id="@+id/tv_orderid"
            android:layout_width="0dp"
            android:layout_weight="1"
            />
        <TextView
            android:padding="8dp"
            android:layout_margin="3dp"
            android:id="@+id/tv_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="8dp"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#FEF9F6"
        android:padding="8dp"
        android:orientation="vertical"
        >
        <TextView
            style="@style/text_style_13"
            android:text="订单详情:"
            android:padding="8dp"
            />
        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_marginLeft="12dp"
            android:layout_marginRight="12dp"
            android:background="@color/orange"
            />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="8dp"
            >
            <TextView
                style="@style/text_style_12"
                android:layout_marginLeft="3dp"
                android:text="商品"

                />
            <TextView
                style="@style/text_style_12"
                android:layout_marginLeft="3dp"
                android:text="单价"
                android:gravity="center_horizontal"
                android:layout_width="0dp"
                android:layout_weight="1"
                />
            <TextView
                style="@style/text_style_12"
                android:layout_marginLeft="3dp"
                android:text="数量"

                />

        </LinearLayout>
        <ListView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/lv_list"
            android:visibility="gone"
            android:padding="8dp"
            ></ListView>
        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_marginLeft="12dp"
            android:layout_marginRight="12dp"
            android:background="@color/orange"
            />
       <RelativeLayout
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:padding="12dp"
           >
           <TextView
              style="@style/text_style_12"
               android:layout_alignParentRight="true"
               android:id="@+id/tv_totalprices"
               android:text="总价："
               />

       </RelativeLayout>

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >
        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="8dp"
                >
                <TextView
                    style="@style/text_style_13"
                    android:text="用户名:"
                    />
                <TextView
                    android:layout_marginLeft="3dp"
                    style="@style/text_style_13"
                    android:id="@+id/tv_userName"
                    />
                <TextView
                    style="@style/text_style_13"
                    android:text="平台号:"
                    android:layout_marginLeft="20dp"
                    />
                <TextView
                    style="@style/text_style_13"
                    android:layout_marginLeft="3dp"
                    android:id="@+id/tv_jobnumber"
                    />
            </LinearLayout>
            <TextView
                android:layout_marginLeft="8dp"
                android:id="@+id/tv_phone"
                style="@style/text_style_13"
                android:text="电话:"
                android:paddingLeft="8dp"
                />
        </LinearLayout>

            <Button
                android:id="@+id/btn_style"
                android:layout_width="80dp"
                android:layout_height="40dp"
                android:text="九点餐"
                android:textColor="@color/white"
                android:layout_marginRight="6dp"
                android:background="@drawable/shape_orange_bg"
                />
    </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_lead"
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:background="#FEF9F6"
            android:padding="10dp"
            android:visibility="gone"
            android:gravity="center_horizontal"
            android:layout_height="wrap_content">
                <TextView
                    style="@style/text_style_13"
                    android:text="代领人电话："
                    />
                <TextView
                    android:id="@+id/tv_phone1"
                    style="@style/text_style_13"
                    />
                <TextView
                    android:layout_marginLeft="20dp"
                    style="@style/text_style_13"
                    android:text="平台号："
                    />
                <TextView
                    android:id="@+id/tv_jobnum"
                    style="@style/text_style_13"
                    />

        </LinearLayout>
        <Button
            android:id="@+id/btn_submit"
            android:layout_marginTop="30dp"
            style="@style/Buton_style"
            android:text="确认领餐"

             />
</LinearLayout>
